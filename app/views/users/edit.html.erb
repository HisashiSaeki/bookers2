<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-box mb-3">
          <label for="user_name", class="form-label">Name</label>
          <%= f.text_field :name, id: "user_name", class: 'form-control' %>
        </div>
        <div class="form-box mb-3">
          <label for="profile_image">Image</label><br>
          <%= f.file_field :profile_image, id: "profile_image", accept: "image/*" %>
        </div>
        <div class="form-box mb-3">
          <label for="introduction">Introduction</label><br>
          <%= f.text_area :introduction, id: "introduction", class: 'form-control' %>
        </div>
        <div class="form-box mb-3">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

