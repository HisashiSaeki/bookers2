<div class="container">
  <div class="row">
    <div class="book-show-left col-md-3">
      <%= render 'userinfo_newbook', user: @user %>
    </div>
    <div class="book-show-right col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @book_detail.user.get_profile_image(100, 100) %><br>
                <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail.id) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td><%= @book_detail.body %></td>
            <% if @book_detail.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book_detail.id), class: 'btn btn-success btn-sm' %></td>
              <td><%= link_to 'Destroy', book_path(@book_detail.id), method: :delete, data:{confirm: '本当に消しますか?'}, class: 'btn btn-danger btn-sm' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

